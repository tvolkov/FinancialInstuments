    <profiles>
        <profile>
            <id>largeFile</id>
            <properties>
                <input.type>LargeFile</input.type>
            </properties>
        </profile>
        <profile>
            <id>regularFile</id>
            <properties>
                <input.type>RegularFile</input.type>
            </properties>
        </profile>
        <profile>
            <id>emptyFile</id>
            <properties>
                <input.type>EmptyFile</input.type>
            </properties>
